                                <!--p title="Afloggen (@User.Identity.Name)"-->
                                @if (!string.IsNullOrEmpty(picture))
                                {
                                    <div class="avatar">
                                        <img src="@picture" alt="avatar" />
                                    </div>
                                }
                            </a>
                        </li>
                    }                    
                    else
                    {
                        <li><a asp-page="/Account" asp-page-handler="login" asp-route-returnUrl="@Context.Request.Path@Context.Request.QueryString"><span class="glyphicon glyphicon-user"></span>
