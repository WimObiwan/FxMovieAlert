    <link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />

    <script>

        @if (Model.MovieEvent != null)
        {
            @: setTimeout(function() { window.location.hash = "#@Model.MovieEvent.Id"; })
        }

    </script>

    <div class="btn-group" role="group" aria-label="Basic example">
        <a href="?@Model.FormatQueryStringWithOnlyHighlights(false)" class="btn btn-@Model.GetFilterStyle(!Model.FilterOnlyHighlights.GetValueOrDefault(Model.FilterOnlyHighlightsDefault))">Alle films</a>
        <a href="?@Model.FormatQueryStringWithOnlyHighlights(true)" class="btn btn-@Model.GetFilterStyle(Model.FilterOnlyHighlights.GetValueOrDefault(Model.FilterOnlyHighlightsDefault))">Uitgekozen films</a>
    </div>

    <a id="filter-link" href="#filter-buttons" data-toggle="collapse">Geavanceerde&nbsp;filters</a>
    <div id="filter-buttons" class="collapse">
        <div class="btn-group">
            <a href="?@Model.FormatQueryStringWithTypeMask(Model.FilterTypeMaskDefault)" class="btn btn-@Model.GetFilterStyle(Model.FilterTypeMask != 7)">
                @if (Model.FilterTypeMask == 7)
                {
                    @: Alle soorten
                }
                else 
                {
                    if ((Model.FilterTypeMask & 1) != 0)
                    {
                        @: Films
                    }
                    if ((Model.FilterTypeMask & 2) != 0)
                    {
                        @: Kortfilms
                    }
                    if ((Model.FilterTypeMask & 4) != 0)
                    {
                        @: Series
                    }
                }
            </a>
            <button type="button" class="btn btn-@Model.GetFilterStyle(Model.FilterTypeMask != 7) dropdown-toggle" data-toggle="dropdown">
                <span class="caret"></span>  <!-- caret -->
                <span class="sr-only">Soorten</span>
            </button>
            
            <ul class="dropdown-menu" role="menu"> <!-- class dropdown-menu -->
                <li><a href="?@Model.FormatQueryStringWithTypeMask(7)" class="btn-@Model.GetFilterStyle(Model.FilterTypeMask == 7)">Toon alle (@Model.Count)</a></li>
                <li class="divider"></li>
                <li><a href="?@Model.FormatQueryStringWithTypeMask(1)" class="btn-@Model.GetFilterStyle(Model.FilterTypeMask != 7 && (Model.FilterTypeMask & 1) != 0)">Enkel films (@Model.CountTypeFilm)</a></li>
                <li><a href="?@Model.FormatQueryStringWithTypeMask(2)" class="btn-@Model.GetFilterStyle(Model.FilterTypeMask != 7 && (Model.FilterTypeMask & 2) != 0)">Enkel kortfilms (@Model.CountTypeShort)</a></li>
                <li><a href="?@Model.FormatQueryStringWithTypeMask(4)" class="btn-@Model.GetFilterStyle(Model.FilterTypeMask != 7 && (Model.FilterTypeMask & 4) != 0)">Enkel series (@Model.CountTypeSerie)</a></li>
            </ul>
        </div>

        <div class="btn-group">
            <a href="?@Model.FormatQueryStringWithMinRating(null)" class="btn btn-@Model.GetFilterStyle(Model.FilterMinRating.HasValue)">
                IMDb Sterren
                @if (Model.FilterMinRating.HasValue)
                {
                    if (Model.FilterMinRating.Value == BroadcastModelBase.NO_IMDB_ID)
                    {
                        @: (geen IMDb)
                    }
                    else if (Model.FilterMinRating.Value == BroadcastModelBase.NO_IMDB_RATING)
                    {
                        @: (geen Sterren)
                    }
                    else
                    {
                        @: (@(Model.FilterMinRating.Value.ToString("0.#"))+)
                    }
                }
            </a>
            <button type="button" class="btn btn-@Model.GetFilterStyle(Model.FilterMinRating.HasValue) dropdown-toggle" data-toggle="dropdown">
                <span class="caret"></span>  <!-- caret -->
                <span class="sr-only">IMDb Sterren</span>
            </button>
            
            <ul class="dropdown-menu" role="menu"> <!-- class dropdown-menu -->
                <li><a href="?@Model.FormatQueryStringWithMinRating(null)" class="btn-@Model.GetFilterStyle(!Model.FilterMinRating.HasValue)">Toon alle films (@Model.Count)</a></li>
                <li class="divider"></li>
                <li><a href="?@Model.FormatQueryStringWithMinRating(9.0m)" class="btn-@Model.GetFilterStyle(Model.FilterMinRating.HasValue && Model.FilterMinRating.Value == 9.0m)">Enkel met 9+ sterren (@Model.CountMinRating9)</a></li>
                <li><a href="?@Model.FormatQueryStringWithMinRating(8.0m)" class="btn-@Model.GetFilterStyle(Model.FilterMinRating.HasValue && Model.FilterMinRating.Value == 8.0m)">Enkel met 8+ sterren (@Model.CountMinRating8)</a></li>
                <li><a href="?@Model.FormatQueryStringWithMinRating(7.0m)" class="btn-@Model.GetFilterStyle(Model.FilterMinRating.HasValue && Model.FilterMinRating.Value == 7.0m)">Enkel met 7+ sterren (@Model.CountMinRating7)</a></li>
                <li><a href="?@Model.FormatQueryStringWithMinRating(6.5m)" class="btn-@Model.GetFilterStyle(Model.FilterMinRating.HasValue && Model.FilterMinRating.Value == 6.5m)">Enkel met 6.5+ sterren (@Model.CountMinRating65)</a></li>
                <li><a href="?@Model.FormatQueryStringWithMinRating(6.0m)" class="btn-@Model.GetFilterStyle(Model.FilterMinRating.HasValue && Model.FilterMinRating.Value == 6.0m)">Enkel met 6+ sterren (@Model.CountMinRating6)</a></li>
                <li><a href="?@Model.FormatQueryStringWithMinRating(5.0m)" class="btn-@Model.GetFilterStyle(Model.FilterMinRating.HasValue && Model.FilterMinRating.Value == 5.0m)">Enkel met 5+ sterren (@Model.CountMinRating5)</a></li>
                <li class="divider"></li>
                <li><a href="?@Model.FormatQueryStringWithMinRating(BroadcastModelBase.NO_IMDB_ID)" class="btn-@Model.GetFilterStyle(Model.FilterMinRating.HasValue && Model.FilterMinRating.Value == BroadcastModelBase.NO_IMDB_ID)">Niet gevonden op IMDb (@Model.CountNotOnImdb)</a></li>
                <li><a href="?@Model.FormatQueryStringWithMinRating(BroadcastModelBase.NO_IMDB_RATING)" class="btn-@Model.GetFilterStyle(Model.FilterMinRating.HasValue && Model.FilterMinRating.Value == BroadcastModelBase.NO_IMDB_RATING)">Niet beoordeeld op IMDb (@Model.CountNotRatedOnImdb)</a></li>
            </ul>
        </div>

        <div class="btn-group">
            <a href="?@Model.FormatQueryStringWithToggleCert(Cert.all)" class="btn btn-@Model.GetFilterStyle(Model.FilterCert != Cert.all)">
                @if (Model.FilterCert == Cert.all)
                {
                    @: Alle Certificaties
                }
                else
                {
                    @: Certificaties (@Model.FormatCert(Model.FilterCert))
                }
            </a>
            <button type="button" class="btn btn-@Model.GetFilterStyle(Model.FilterCert != Cert.all) dropdown-toggle" data-toggle="dropdown">
                <span class="caret"></span>  <!-- caret -->
                <span class="sr-only">Certificaties</span>
            </button>
            
            <ul class="dropdown-menu" role="menu"> <!-- class dropdown-menu -->
                <li><a href="?@Model.FormatQueryStringWithToggleCert(Cert.all)" class="btn-@Model.GetFilterStyle(Model.FilterCert == Cert.all)">Alle films tonen (@Model.Count)</a></li>
                <li class="divider"></li>
                <li><a href="?@Model.FormatQueryStringWithToggleCert(Cert.g)" class="btn-@Model.GetFilterStyle((Model.FilterCert & Cert.g) != 0)">G (@Model.CountCertG)</a></li>
                <li><a href="?@Model.FormatQueryStringWithToggleCert(Cert.pg)" class="btn-@Model.GetFilterStyle((Model.FilterCert & Cert.pg) != 0)">PG (@Model.CountCertPG)</a></li>
                <li><a href="?@Model.FormatQueryStringWithToggleCert(Cert.pg13)" class="btn-@Model.GetFilterStyle((Model.FilterCert & Cert.pg13) != 0)">PG-13 (@Model.CountCertPG13)</a></li>
                <li><a href="?@Model.FormatQueryStringWithToggleCert(Cert.r)" class="btn-@Model.GetFilterStyle((Model.FilterCert & Cert.r) != 0)">R (@Model.CountCertR)</a></li>
                <li><a href="?@Model.FormatQueryStringWithToggleCert(Cert.nc17)" class="btn-@Model.GetFilterStyle((Model.FilterCert & Cert.nc17) != 0)">NC-17 (@Model.CountCertNC17)</a></li>
                <li><a href="?@Model.FormatQueryStringWithToggleCert(Cert.other)" class="btn-@Model.GetFilterStyle((Model.FilterCert & Cert.other) != 0)">Overige (@Model.CountCertOther)</a></li>
                <li class="divider"></li>
                <li><a href="?@Model.FormatQueryStringWithToggleCert(Cert.none)" class="btn-@Model.GetFilterStyle((Model.FilterCert & Cert.none) != 0)">Zonder (@Model.CountCertNone)</a></li>
            </ul>
        </div>

        <div class="btn-group">
            <a href="?@Model.FormatQueryStringWithNotYetRated(null)" class="btn btn-@Model.GetFilterStyle(Model.FilterNotYetRated.HasValue)">
                @if (Model.FilterNotYetRated.HasValue)
                {
                    @if (Model.FilterNotYetRated.Value)
                    {
                        @: Enkel niet bekeken
                    }
                    else
                    {
                        @: Enkel bekeken
                    }
                }
                else
                {
                    @: Zowel bekeken als niet bekeken
                }
            </a>
            <button type="button" class="btn btn-@Model.GetFilterStyle(Model.FilterNotYetRated.HasValue) dropdown-toggle" data-toggle="dropdown">
                <span class="caret"></span>  <!-- caret -->
                <span class="sr-only"></span>
            </button>
            
            <ul class="dropdown-menu" role="menu"> <!-- class dropdown-menu -->
                <li>
                    <a href="?@Model.FormatQueryStringWithNotYetRated(null)" class="btn-@Model.GetFilterStyle(!Model.FilterNotYetRated.HasValue)">
                        Alle films tonen (@Model.Count)
                    </a>
                </li>
                <li class="divider"></li>
                <li class="@(string.IsNullOrEmpty(Model.ImdbUserId)? "disabled" : "")">
                    <a href="?@Model.FormatQueryStringWithNotYetRated(true)" class="btn-@Model.GetFilterStyle(Model.FilterNotYetRated.HasValue && Model.FilterNotYetRated.Value)">
                        Enkel films tonen die nog niet bekeken zijn (@Model.CountNotYetRated)
                    </a>
                </li>
                <li class="@(string.IsNullOrEmpty(Model.ImdbUserId)? "disabled" : "")">
                    <a href="?@Model.FormatQueryStringWithNotYetRated(false)" class="btn-@Model.GetFilterStyle(Model.FilterNotYetRated.HasValue && !Model.FilterNotYetRated.Value)">
                        Enkel films tonen die wel bekeken zijn (@Model.CountRated)
                    </a>
                </li>
                <li class="divider"></li>

                @if (string.IsNullOrEmpty(Model.ImdbUserId))
                {
                    <li class="dropdown-header">IMDb gebruiker is niet ingesteld</li>
                }
                else
                {
                    <li class="dropdown-header">Je gebruikt IMDb gebruiker @(Model.ImdbUserId).</li>
                    @if (Model.RefreshRequestTime.HasValue)
                    {
                        <li class="dropdown-header">
                            Er is een refresh van je IMDb ratings gepland.<br/>
                            Refresh de pagina binnen enkele minuten om het resultaat te zien.
                        </li>
                    }
                    else if (Model.LastRefreshRatingsTime.HasValue)
                    {
                        <li class="dropdown-header">
                            Je IMDb ratings werden laatst herladen op @Model.LastRefreshRatingsTime.Value.ToLocalTime().
                        </li>
                    }
                    else
                    {
                        <li class="dropdown-header">
                            Je IMDb ratings werden nog niet opgehaald.
                        </li>
                    }
                    <!--li><a href="/ImdbUser?forcerefresh=true">IMDb ratings nu geforceerd herladen</a></li-->
                    <!--li class="divider"></li-->
                }
                <li><a href="/ImdbUser">IMDb gebruiker instellen</a></li>
            </ul>
        </div>

        <div class="btn-group">
            <a href="?@Model.FormatQueryStringWithMaxDays(0)" class="btn btn-@Model.GetFilterStyle(Model.FilterMaxDays != Model.FilterMaxDaysDefault)">
                @if (Model.FilterMaxDays == 0)
                {
                    @: Aantal dagen (maximum)
                }
                else
                {
                    @: Aantal dagen (@Model.FilterMaxDays)
                }
            </a>
            <button type="button" class="btn btn-@Model.GetFilterStyle(Model.FilterMaxDays != Model.FilterMaxDaysDefault) dropdown-toggle" data-toggle="dropdown">
                <span class="caret"></span>  <!-- caret -->
                <span class="sr-only">Certificaties</span>
            </button>
            
            <ul class="dropdown-menu" role="menu"> <!-- class dropdown-menu -->
                <li><a href="?@Model.FormatQueryStringWithMaxDays(0)" class="btn-@Model.GetFilterStyle(Model.FilterMaxDays == 0)">Maximum aantal dagen (@Model.Count)</a></li>
                <li class="divider"></li>
                <li><a href="?@Model.FormatQueryStringWithMaxDays(8)" class="btn-@Model.GetFilterStyle(Model.FilterMaxDays == 8)">8 dagen (@Model.Count8days)</a></li>
                <li><a href="?@Model.FormatQueryStringWithMaxDays(5)" class="btn-@Model.GetFilterStyle(Model.FilterMaxDays == 5)">5 dagen (@Model.Count5days)</a></li>
                <li><a href="?@Model.FormatQueryStringWithMaxDays(3)" class="btn-@Model.GetFilterStyle(Model.FilterMaxDays == 3)">3 dagen (@Model.Count3days)</a></li>
            </ul>
        </div>
    </div>

    <table class="table">
    <tbody>
        @foreach (var record in Model.Records.OrderBy(m => m.MovieEvent.EndTime))
        {
            var movieEvent = record.MovieEvent;
            
            DateTime? endDate;
            int? daysAvailable;
            if (!movieEvent.EndTime.HasValue || movieEvent.EndTime.Value >= now.AddMonths(6))
            {
                endDate = null;
                daysAvailable = null;
            }
            else
            { 
                if (movieEvent.EndTime.Value.Hour >= 22)
                    endDate = movieEvent.EndTime.Value.Date;
                else
                    endDate = movieEvent.EndTime.Value.AddHours(-1).Date;
                daysAvailable = (int)(endDate.Value - now.Date).TotalDays;
            }

            <tr class="@(movieEvent.Id == Model.MovieEvent?.Id ? "info" : "")">
                <td class="collapsible">
                    <img src="@(Model.GetImageUrl(movieEvent.Channel.LogoS_Local, movieEvent.Channel.LogoS))" loading="lazy" alt="@movieEvent.Channel.Name" title="@movieEvent.Channel.Name" width=50 />
                    <br/>
                        <del>@(@endDate?.ToString("dddd"))</del>
                    <br/>
                        <del>@(@endDate?.ToShortDateString())</del>
                    <br/>
                    @if (movieEvent.Duration.HasValue)
                    {
                        @: @(new TimeSpan((long)@movieEvent.Duration * 600000000).ToString(@"h\:mm"))
                    }
                </td>
                <td class="collapsible">
                    @if (@movieEvent.PosterS != null)
                    {
                        <img src="@(Model.GetImageUrl(movieEvent.PosterS_Local, movieEvent.PosterS))" loading="lazy" alt="@movieEvent.Title" width=150 />
                    }
                </td>
                <td>
                    <a class="anchor" name="@movieEvent.Id" ></a>
                    <div class="reverse-collapsible">
                        <img src="@(Model.GetImageUrl(movieEvent.Channel.LogoS_Local, movieEvent.Channel.LogoS))" loading="lazy" alt="@movieEvent.Channel.Name" title="@movieEvent.Channel.Name" width=50 />
                        &nbsp;
                        <del>@(@endDate?.ToString("dddd")) @(@endDate?.ToShortDateString())</del>
                        @if (movieEvent.Duration.HasValue)
                        {
                            @: &nbsp; (@(new TimeSpan((long)@movieEvent.Duration.Value * 600000000).ToString(@"h\:mm")))
                        }
                    </div>
                    <h2>
                        @movieEvent.Title
                        @if (movieEvent.Year > 0)
                        {
                            <small>@movieEvent.Year</small>
                        }
                        <small>
                            @if (!string.IsNullOrEmpty(@movieEvent.Movie?.Certification))
                            {
                                @if (@movieEvent.Movie.Certification.Substring(0, 3) == "US:")
                                {
                                    @movieEvent.Movie.Certification.Substring(3)
                                }
                                else
                                {
                                    @movieEvent.Movie.Certification
                                }
                            }
                            
                            @{
                                var shareUrl = $"https://filmoptv.be/Streaming/?m={movieEvent.Id}";
                            }

                            @if (Model.EditImdbLinks)
                            {
                                <small>
                                    <a href="@shareUrl">&pi;</a>
                                </small>
                            }
                        </small>
                        <span style="white-space: nowrap; float: right;">
                            <small>
                                <a href="@shareUrl" target="_new" title="Share link..." style="text-decoration: none">
                                    <img src="/images/link-24x24.png" loading="lazy" alt="Link" height="24px" />
                                </a>
                                &nbsp;
                                <!--div class="fb-share-button" data-href="@shareUrl" data-layout="button" data-size="small" data-mobile-iframe="true"></div-->
                                <a href="https://www.facebook.com/sharer/sharer.php?u=@(System.Text.Encodings.Web.UrlEncoder.Default.Encode(@shareUrl))" target="_new" title="Share op facebook..." style="text-decoration: none">
                                    <img src="/images/facebook-36x36.png" loading="lazy" alt="Facebook" height="36px" />
                                </a>
                                @if (!string.IsNullOrEmpty(movieEvent.VodLink))
                                {
                                    @: &nbsp;
                                    <a href="@movieEvent.VodLink" target="_new" title="Speel @movieEvent.Title af op @movieEvent.Channel.Name..." style="text-decoration: none">
                                        <img src="/images/play.png" loading="lazy" alt="Yelo" height="32px" />
                                    </a>
                                }
                                @* &nbsp;
                                @{
                                    string yeloUrl = movieEvent.YeloUrl;
                                    if (yeloUrl == null)
                                    {
                                        yeloUrl = "https://www.yeloplay.be/?action=search&q=" + System.Text.Encodings.Web.UrlEncoder.Default.Encode(movieEvent.Title);
                                    }
                                }
                                <a href="@yeloUrl" target="_new" title="Programmeer @movieEvent.Title op je digicorder..." style="text-decoration: none">
                                    <img src="/images/yeloplay-55x32.png" loading="lazy" alt="Yelo" height="32px" />
                                </a> *@
                                &nbsp;
                                @if (!string.IsNullOrEmpty(@movieEvent.Movie?.ImdbId))
                                {
                                    <a href="https://www.imdb.com/title/@movieEvent.Movie.ImdbId" target="_new" title="Raadpleeg @movieEvent.Title op IMDb..." style="text-decoration: none">
                                        <img src="/images/imdb-50x24.png" loading="lazy" alt="IMDb" height="24px" />
                                        @if (@movieEvent.Movie.ImdbRating.HasValue)
                                        {
                                            @((@movieEvent.Movie.ImdbRating.Value / 10.0).ToString("0.0"))
                                            <span class="stars">
                                                <span style="width: @(Math.Round(16.0 * @movieEvent.Movie.ImdbRating.Value / 10, 0))px;">
                                                </span>
                                            </span>
                                        }
                                    </a>
                                }

                                @if (Model.EditImdbLinks)
                                {
                                    <small>
                                        <a href="#manualImdbLink-@movieEvent.Id" data-toggle="collapse">
                                            <span class="glyphicon glyphicon-film"></span>
                                        </a>
                                        <div id="manualImdbLink-@movieEvent.Id" class="collapse">
                                            MovieEventId: @movieEvent.Id <br/>
                                            <form action="#" method="GET">
                                                Manual input: 
                                                IMDb search 
                                                <a href="https://www.imdb.com/find?q=@(System.Text.Encodings.Web.UrlEncoder.Default.Encode(movieEvent.Title))&amp;s=all" target="_new">all</a>
                                                <a href="https://www.imdb.com/search/title?release_date=@(movieEvent.Year-1)-07-01,@(movieEvent.Year+1)-07-01&amp;title=@(System.Text.Encodings.Web.UrlEncoder.Default.Encode(movieEvent.Title))" target="_new">advanced</a>
                                                <br/>
                                                IMDb ID: <input type="edit" name="setimdbid" value="" /> <br/>
                                                <input type="hidden" name="movieeventid" value="@movieEvent.Id" /> <br/>
                                                @if (Model.FilterTypeMask != Model.FilterTypeMaskDefault)
                                                {
                                                    <input type="hidden" name="minrating" value="@Model.FilterTypeMask.ToString()" /> <br/>
                                                }
                                                @if (Model.FilterMinRating.HasValue)
                                                {
                                                    <input type="hidden" name="minrating" value="@Model.FilterMinRating.Value.ToString(CultureInfo.InvariantCulture.NumberFormat)" /> <br/>
                                                }
                                                @if (Model.FilterNotYetRated.HasValue)
                                                {
                                                    <input type="hidden" name="notyetrated" value="@Model.FilterNotYetRated.Value.ToString()" /> <br/>
                                                }
                                                @if (Model.FilterCert != Cert.all)
                                                {
                                                    <input type="hidden" name="cert" value="@Model.FilterCert.ToString("g")" /> <br/>
                                                }
                                                @if (Model.FilterMaxDays != Model.FilterMaxDaysDefault)
                                                {
                                                    <input type="hidden" name="maxdays" value="@Model.FilterMaxDays" /> <br/>
                                                }
                                                <input type="submit" value="Set" /> 
                                            </form>
                                        </div>
                                    </small>
                                }
                            </small>
                        </span>
                    </h2>
                    <div class="reverse-collapsible">
                        @if (@movieEvent.PosterS != null)
                        {
                            <img src="@(Model.GetImageUrl(movieEvent.PosterS_Local, movieEvent.PosterS))" loading="lazy" alt="@movieEvent.Title" width=150 />
                        }
                    </div>
                    <div style="clear: both;">
                        <p>
                            @movieEvent.Genre
                        </p>
                        <p>
                            @Html.Raw(@movieEvent.Content)
                        </p>
                        @if (!string.IsNullOrEmpty(movieEvent.Opinion))
                        {
                            <p>
                                <i>
                                    Humo: &ldquo;@Html.Raw(movieEvent.Opinion)&rdquo;
                                </i>
                            </p>
                        }
                        @if (record.UserRating != null)
                        {
                            <p class="slim"><div class="alert alert-info small-alert">
                                Deze film gaf je op @record.UserRating.RatingDate.ToLongDateString() een rating @(record.UserRating.Rating)
                            </div></p>
                        }
                        @if (record.UserWatchListItem != null)
                        {
                            <p class="slim"><div class="alert alert-success small-alert">
                                Deze film heb je op @record.UserWatchListItem.AddedDate.ToLongDateString() op je watchlist gezet
                            </div></p>
                        }
                        @if (daysAvailable < 4)
                        {
                            <p class="slim"><div class="timing alert alert-warning small-alert">
                            @if (daysAvailable < 1 && movieEvent.EndTime.HasValue)
                            {
                                @: Laatste dag om deze film te bekijken!
                            }
                            else if (daysAvailable < 2 && movieEvent.EndTime.HasValue)
                            {
                                @: Voorlaatste dag om deze film te bekijken.
                            }
                            else
                            {
                                @: Deze film is nog @daysAvailable dagen te bekijken.
                            }
                            @{
                                var endTimeToUse = movieEvent.EndTime.Value;
                                if (endTimeToUse.TimeOfDay.TotalSeconds == 0)
                                {
                                    endTimeToUse = endTimeToUse.AddMinutes(-1);
                                }
                            }
                            (Tot @(endTimeToUse.ToString("dddd")) @(endTimeToUse.ToShortTimeString()))
                            </div></p>
                        }
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (Model.FilterMaxDays > 0 && Model.FilterMaxDays < 10)
{
    if (User.Identity.IsAuthenticated)
    {
        @* string ref_load_more = "?";
        if (Model.FilterMaxDays <= 3)
        {
            ref_load_more += FormatQueryStringWithMaxDays(5);
        }
        else if (Model.FilterMaxDays <= 5)
        {
            ref_load_more += FormatQueryStringWithMaxDays(8);
        }
        else
        {
